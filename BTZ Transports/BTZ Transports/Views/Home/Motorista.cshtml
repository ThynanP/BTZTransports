
@{
    ViewBag.Title = "Motorista";
}

<h2>Motoristas</h2>
<button type="button" onclick="location.href = '@(Url.Action("MotoristaRegister", "Home", new { id = 0 }))'">Novo</button>
<div class="row">
    <table id="motoristas">
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>CPF</th>
            <th>CNH</th>
            <th>Categoria CNH</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr class='clickable-row' onclick="location.href = '@(Url.Action("MotoristaRegister", "Home", new { id = item.id }))'">
                <td>@item.id</td>
                <td>@item.nome</td>
                <td>@item.CPF</td>
                <td>@item.CNH</td>
                <td>@item.categoriaCNH</td>
            </tr>
        }
    </table>
</div>
<style>
    #motoristas {
        font-family: Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

        #motoristas td, #abastecimentos th {
            border: 1px solid #ddd;
            padding: 8px;
        }

        #motoristas tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        #motoristas tr:hover {
            background-color: #ddd;
        }

        #motoristas th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #04AA6D;
            color: white;
        }

    button {
        width: 150px;
        background-color: #4CAF50;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        button:hover {
            background-color: #45a049;
        }
</style>